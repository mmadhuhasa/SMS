{% extends 'applayout.twig' %}
{% block header_scripts_before %}
<link rel="stylesheet" href="{{ base_url() }}/vendor/fullcalendar/fullcalendar.min.css">
{% endblock %}
{% block header_scripts %}
<link rel="stylesheet" href="{{ base_url() }}/vendor/select2/select2.css" />
<link rel="stylesheet" href="{{ base_url() }}/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.min.css">
<link rel="stylesheet" href="{{ base_url() }}/vendor/sweetalert2/dist/sweetalert2.css"/>
{% endblock %}
{% block header %}
{% include 'partials/top-header.twig' %}
{% endblock %}

{% block appnav %}
{% include 'partials/appnav.twig' %}
{% endblock %}

{% block content %}
    <div id="main-content">
        <div class="container">
            <div class="block-header">
                <div class="row">
                    <div class="col-lg-5 col-md-8 col-sm-12">                        
                        <h2>School Calendar</h2>
                         <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ base_url() }}/admin-dashboard"><i class="icon-home"></i></a></li>                        
                            <li class="breadcrumb-item">School Calendar</li>
                        </ul>
                    </div>            
                    <div class="col-lg-7 col-md-4 col-sm-12 text-right">
                                             
                    </div>
                </div>
            </div>

            <div class="row clearfix">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="body">
                            <div id="calendar"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card">
                        <div class="body">
                            <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#addevent">Add New Announcement</button>
                        </div>
                    </div>
                    <div class="card profile-header">
                        <div class="body">
                            <div class="text-center">
                                <img src="{{ base_url() }}//images/school.png" class="rounded-circle m-b-15" style="width:140px;height:140px;">
                                <div>
                                    <h4 class="m-b-0"><strong>Modern Public School</strong></h4>
                                    <span>Bangalore, India</span>
                                </div>
                                <div class="progress progress-xs m-b-25 m-t-25">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 89%;">
                                        <span class="sr-only">60% Complete</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <h6>1</h6>
                                        <span>Holidays</span>
                                    </div>
                                    <div class="col-4">
                                        <h6>2</h6>
                                        <span>Events</span>
                                    </div>
                                    <div class="col-4">
                                        <h6>2</h6>
                                        <span>Notice</span>
                                    </div>
                                </div>
                            </div>
                           
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block after_body %}
<div class="modal fade" id="addevent" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="title" id="defaultModalLabel">Add Announcement</h4>
            </div>
            <div class="modal-body">
			<div class="form-group">
                    <label>Announcement Type</label>
                    <select class="form-control show-tick ms select2" data-placeholder="Select">
                        <option>Holiday</option>
                        <option>Event</option>
						<option>Notice</option>
                                           
                    </select>
             </div>
			
			   <div class="form-group">
			        <label>Title</label>
                    <div class="form-line">
                        <input type="text" class="form-control" placeholder="Enter a title">
                    </div>
                </div>
				  <div class="form-group">
                    <div class="form-line">
                        <label>Date</label>
						<div class="input-group date" data-date-autoclose="true" data-provide="datepicker">
                                        <input type="text" class="form-control">
                                        <div class="input-group-append">                                            
                                            <button class="btn btn-outline-secondary" type="button"><i class="fa fa-calendar"></i></button>
                                        </div>
                                    </div>
                    </div>
                </div>
				
				
				<div class="row">
                                    <div class="col-6">
                                        <label>From Date</label>
						<div class="input-group date" data-date-autoclose="true" data-provide="datepicker">
                                        <input type="text" class="form-control">
                                        <div class="input-group-append">                                            
                                            <button class="btn btn-outline-secondary" type="button"><i class="fa fa-calendar"></i></button>
                                        </div>
                                    </div>
                                    </div>
                                    <div class="col-6">
                                        <label>To Date</label>
						<div class="input-group date" data-date-autoclose="true" data-provide="datepicker">
                                        <input type="text" class="form-control">
                                        <div class="input-group-append">                                            
                                            <button class="btn btn-outline-secondary" type="button"><i class="fa fa-calendar"></i></button>
                                        </div>
                                    </div>
                                    </div>
                      
                                </div>
								
								
				<!--<div class="form-group">
                    <div class="form-line">
                        <label>Range</label>
						  <div class="input-daterange input-group" data-provide="datepicker">
                            <input type="text" class="form-control" name="start">
                            <span class="input-group-addon" style="margin-left:10px;margin-right:10px;"> to </span>
                            <input type="text" class="form-control" name="end">
                        </div>
                    </div>
                </div>-->
                
                <div class="form-group" style="margin-top:10px;">
				 <label>Description</label>
                    <div class="form-line">
                        <textarea class="form-control no-resize" placeholder="Event Description..."></textarea>
                    </div>
                </div>       
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Add</button>
                <button type="button" class="btn btn-simple" data-dismiss="modal">CLOSE</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block footer_scripts %}
<script src="{{ base_url() }}/assets/bundles/fullcalendarscripts.bundle.js"></script><!--/ calender javascripts --> 
<script src="{{ base_url() }}/vendor/fullcalendar/fullcalendar.js"></script><!--/ calender javascripts --> 
<script src="{{ base_url() }}/vendor/select2/select2.min.js"></script>   
<script src="{{ base_url() }}/vendor/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script src="{{ base_url() }}/assets/js/pages/calendar.js"></script>
<script src="{{ base_url() }}/vendor/sweetalert2/dist/sweetalert2.min.js"></script> <!-- SweetAlert Plugin Js --> 
{% endblock %}