<form action="{{page.payments.PAYPAL_URL}}" method="post" name="payOffsetForm" id="payOffsetForm">
                    <!-- Identify your business so that you can collect the payments. -->
                    <input type="hidden" name="business" value="{{page.payments.PAYPAL_ID}}">
                    <!-- Specify a Buy Now button. -->
                    <input type="hidden" name="cmd" value="_xclick">
                    <!-- Specify details about the item that buyers will purchase. -->
                    <input type="hidden" name="item_name" value="{{page.payments.itemName}}">
                    <input type="hidden" name="item_number" value="{{page.payments.itemID}}">
                    <input type="hidden" name="amount" value="{{page.payments.priceToPay}}">
                    <input type="hidden" name="currency_code" value="{{page.payments.PAYPAL_CURRENCY}}">
					
                    <!-- Specify URLs -->
                    <input type="hidden" name="return" value="{{page.payments.PAYPAL_RETURN_URL}}">
                    <input type="hidden" name="cancel_return" value="{{page.payments.PAYPAL_CANCEL_URL}}">
					
                    <!-- Display the payment button. -->
                    <input type="image" name="submit" border="0" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynow_LG.gif">
                    
                    
                    	<div class="divider divider-style-4 divider-icon-sm"><i class="fa fa-chevron-down"></i>
									</div><div class="row">
								<div class="col-md-12">
									<div class="actions-continue">
										<button type="submit" class="btn pull-right btn-primary btn-lg"> Checkout Now <i class="fa fa-angle-right ml-xs"></i></button>
									</div>
								</div></div>
								
								
                </form>