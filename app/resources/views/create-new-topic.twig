{% extends 'applayout.twig' %}
{% block header_scripts %}
<link rel="stylesheet" href="{{ base_url() }}/vendor/sweetalert2/dist/sweetalert2.css"/>
{% endblock %}
{% block header %}
{% include 'partials/top-header.twig' %}
{% endblock %}

{% block appnav %}
{% include 'partials/appnav.twig' %}
{% endblock %}

{% block content %}
       <div id="main-content">
        <div class="container">
            <div class="block-header">
                <div class="row">
                    <div class="col-lg-5 col-md-8 col-sm-12">                        
                        <h2>Add New Topic</h2>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ base_url() }}/admin-dashboard"><i class="icon-home"></i></a></li>                   
                             <li class="breadcrumb-item"><a href="{{ base_url() }}/manage-topics"> Manage topics</a></li>
                            <li class="breadcrumb-item active">New Topic</li>
                        </ul>
                    </div> 
                     <div class="col-lg-7 col-md-4 col-sm-12 text-right">
                        
                    </div>					
                    
                </div>
            </div>


			  
			
<!------- New topic Form Starts ------>


<div class="row clearfix">
     <div class="col-md-12">
          <div class="card">
               <div class="body">
					 <form class="form-auth-small" name="createTopicForm" id="createTopicForm" action="{{ base_url() }}/apis/topics/create" method="POST">
						 <input type="hidden" name="image" class="form-control" value="{{session.image}}" required>     
                             <div class="row clearfix">
                                  
								  <div class="col-lg-4 col-md-12 col-sm-12">   
                                       <label>Select Class*</label>								
                                       <select name="class_id" class="form-control">
                                               <option value="">Select Class</option>                       							   
{% if page.classes %}
{% for row in page.classes %}
<option value="{{row.id}}">{{row.name}}</option>
{% endfor %}
{% endif %}
	
                                       </select>
                                  </div>
								  
								  <div class="col-lg-4 col-md-12 col-sm-12">   
                                       <label>Select Subject*</label>								
                                       <select name="subject_id" class="form-control">
                                               <option value="">Select subject</option>
{% if page.subjects %}
{% for row in page.subjects %}
<option value="{{row.id}}">{{row.title}}</option>
{% endfor %}
{% endif %}
                                               
                                       </select>
                                  </div>
								  <div class="col-lg-4 col-md-12 col-sm-12">                                
                                       <div class="form-group">
                                           <label>Topic Name</label>
                                           <input type="text" name="title" class="form-control" required>
                                       </div>
                                 </div>
                                 <div class="col-lg-12 col-md-12 col-sm-12">   
								   <div class="form-group">
                                           <label>Topic Description</label>
                                           <textarea name="description" class="form-control" id="class" rows="3"></textarea>
                                    </div>
						         </div>	
						    </div>	
                            
							 
							  <br>
                                <button type="submit" class="btn btn-primary">Add Topic</button>
							 </form>
							 <div id="form_overlay" style="display:none;">
					<div style="margin: 68px; text-align: center;">
					<img src="{{ base_url() }}/images/loading.gif" style="width:32px;margin:10px auto;"/>
					<h5 id="responseMsg" style="margin-bottom: 2px;"><strong>Processing Request...</strong></h5>
					<p>Please wait...</p>
					</div>					
					</div>
					
					 </div>	
               </div>
         </div>
</div>


<!-------  topic Form ends ------>
			 
	   </div>
    </div>
{% endblock %}
{% block footer_scripts %}
<script src="{{ base_url() }}/scripts/app.js"></script>
<script src="{{ base_url() }}/scripts/create_topic.js"></script>
<script src="{{ base_url() }}/vendor/sweetalert2/dist/sweetalert2.min.js"></script> <!-- SweetAlert Plugin Js --> 
<script src="{{ base_url() }}/assets/bundles/mainscripts.bundle.js"></script>
<script src="{{ base_url() }}/assets/js/pages/forms/advanced-form-elements.js"></script>
{% endblock %}