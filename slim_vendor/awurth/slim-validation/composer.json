{
    "name": "awurth/slim-validation",
    "description": "A validator for the Slim PHP Micro-Framework",
    "keywords": ["validation", "slim"],
    "homepage": "https://github.com/awurth/slim-validation",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexis Wurth",
            "email": "alexis.wurth57@gmail.com",
            "homepage": "https://github.com/awurth"
        }
    ],
    "autoload": {
        "psr-4": {
            "Awurth\\SlimValidation\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Awurth\\SlimValidation\\Tests\\": "Tests/"
        }
    },
    "require": {
        "psr/http-message": "^1.0",
        "respect/validation": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.3",
        "slim/slim": "^3.8",
        "slim/twig-view": "^2.2"
    },
    "suggest": {
        "slim/twig-view": "Needed to be able to use the twig extension"
    }
}
