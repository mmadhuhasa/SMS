{% block content %}
{% set debugView = true %}
       <div id="main-content">
        <div class="container">
            <div class="block-header">
                <div class="row">
                    <div class="col-lg-5 col-md-8 col-sm-12">                        
                        <h2>Register New Student</h2>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ base_url() }}/admin-dashboard"><i class="icon-home"></i></a></li>                            
                             <li class="breadcrumb-item"><a href="{{ base_url() }}/manage-students"> Students</a></li>
                            <li class="breadcrumb-item active">Register</li>
                        </ul>
                    </div>            
                    <div class="col-lg-7 col-md-4 col-sm-12 text-right">
                        
                    </div>
                </div>
            </div>

            <div class="row clearfix">
                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <h2>Parent Guardian Details</h2>
                        </div>
                        <div class="body">
                            <form name="parentRegistrationForm" id="parentRegistrationForm" method="post" action="{{ base_url() }}/auth/parent_registration" novalidate>
							 <div class="row">
                    <div class="col-lg-3 col-md-12 col-sm-12">
                      <div class="form-group">
                                    <label>Father Name</label>
                                    <input type="text" name="mobile" class="form-control" required>
                                </div>
                    </div>   
                    <div class="col-lg-3 col-md-12 col-sm-12">
                         <div class="form-group">
                                    <label>Phone No.</label>
                                    <input type="text" name="mobile" class="form-control" required>
                                </div>
                    </div>
					 <div class="col-lg-3 col-md-12 col-sm-12">                
                      <div class="form-group">
                                    <label>Father Occupation</label>
                                    <input type="text" name="mobile" class="form-control" required>
                                </div>
                    </div>            
                    <div class="col-lg-3 col-md-12 col-sm-12">
                         <div class="form-group">
                                    <label>Father Photo</label>
                                    <input type="text" name="mobile" class="form-control" required>
                                </div>
                    </div>
                </div>
				
				 <div class="row">
                    <div class="col-lg-3 col-md-12 col-sm-12">                        
                      <div class="form-group">
                                    <label>Mother Name</label>
                                    <input type="text" name="mobile" class="form-control" required>
                                </div>
                    </div>            
                    <div class="col-lg-3 col-md-12 col-sm-12">
                         <div class="form-group">
                                    <label>Phone No.</label>
                                    <input type="text" name="mobile" class="form-control" required>
                                </div>
                    </div>
					 <div class="col-lg-3 col-md-12 col-sm-12">                        
                      <div class="form-group">
                                    <label>Mother Occupation</label>
                                    <input type="text" name="mobile" class="form-control" required>
                                </div>
                    </div>            
                    <div class="col-lg-3 col-md-12 col-sm-12">
                         <div class="form-group">
                                    <label>Mother Photo</label>
                                    <input type="text" name="mobile" class="form-control" required>
                                </div>
                    </div>
                </div>
				
				 <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12"> 
					 <div class="form-group">
                    <label>If Guardian Is </label>
					<label class="fancy-radio"><input name="guardian" value="male" type="radio" checked><span><i></i>Father</span></label>
                    <label class="fancy-radio"><input name="guardian" value="female" type="radio"><span><i></i>Mother</span></label>
					<label class="fancy-radio"><input name="guardian" value="male" type="radio"><span><i></i>Other</span></label>
            		<br>
				  </div>
                </div>					
                </div>
				
				
				 <div class="row">
                    <div class="col-lg-3 col-md-12 col-sm-12">                        
                      <div class="form-group">
                                    <label>Guardian Name</label>
                                    <input type="text" name="mobile" class="form-control" required>
                                </div>
                    </div>            
                    <div class="col-lg-3 col-md-12 col-sm-12">
                         <div class="form-group">
                                    <label>Guardian Relation</label>
                                    <input type="text" name="mobile" class="form-control" required>
                                </div>
                    </div>
					 <div class="col-lg-3 col-md-12 col-sm-12">                        
                      <div class="form-group">
                                    <label>Guardian E-mail</label>
                                    <input type="email" name="mobile" class="form-control" required>
                                </div>
                    </div>            
                    <div class="col-lg-3 col-md-12 col-sm-12">
                         <div class="form-group">
                                    <label>Guardian Phone</label>
                                    <input type="text" name="mobile" class="form-control" required>
                                </div>
                    </div>
                </div>
				
				
				 <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">                        
                      <div class="form-group">
                                    <label>Guardian Address</label>
									 <input type="text" name="mobile" class="form-control" required>
                                </div>
                    </div>
                </div>
				
				
				<br>
                <button type="submit" class="btn btn-primary">SAVE GURADIAN DETAILS</button>
                </form>
                </div>
                </div>
                </div>
				
            </div>

			
        </div>
    </div>
{% endblock %}
